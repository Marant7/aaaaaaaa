@{
    ViewBag.Title = "Dashboard - Administrador";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Tailwind + FontAwesome -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { 'sans': ['Poppins', 'Segoe UI', 'sans-serif'] },
                    colors: {
                        'pink-gradient-start': '#f093fb',
                        'pink-gradient-end': '#f5576c'
                    }
                }
            }
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        ::-webkit-scrollbar {
            display: none;
        }
    </style>
</head>

<body class="font-sans min-h-screen bg-gradient-to-br from-pink-gradient-start to-pink-gradient-end">

    <!-- Header -->
    <header class="bg-white shadow-lg fixed top-0 left-0 w-full z-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
            <div class="flex items-center">
                <i class="fas fa-book text-2xl text-pink-600 mr-3"></i>
                <h1 class="text-xl font-bold text-gray-800">Panel de Administración - Biblioteca UPT</h1>
            </div>
            <a href="@Url.Action("Logout", "Account")"
               class="bg-gradient-to-r from-pink-500 to-pink-600 text-white px-5 py-2 rounded-lg font-semibold hover:from-pink-600 hover:to-pink-700 transition duration-300 transform hover:scale-105 shadow-md">
                <i class="fas fa-sign-out-alt mr-2"></i> Cerrar Sesión
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="pt-24 pb-12 px-4 flex justify-center">
        <div class="bg-white rounded-2xl shadow-2xl p-10 max-w-3xl w-full">

            <!-- Bienvenida -->
            <section class="text-center mb-8">
                <i class="fas fa-shield-alt text-6xl text-pink-600 mb-4"></i>
                <h2 class="text-3xl font-bold text-gray-800 mb-2">¡Bienvenido, Administrador!</h2>
                <p class="text-gray-600">Gestiona la biblioteca y las donaciones desde tu panel de control</p>
            </section>

            <!-- Información del Administrador -->
            <section class="bg-gray-50 rounded-lg p-6 mb-8 border border-gray-100">
                <h3 class="text-xl font-semibold text-gray-800 mb-4">
                    <i class="fas fa-user-shield mr-2 text-pink-600"></i>Información del Administrador
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div><span class="font-medium text-gray-700">👤 Nombre:</span> <span class="text-gray-600">@ViewBag.AdminName</span></div>
                    <div><span class="font-medium text-gray-700">🏷 Rol:</span> <span class="text-gray-600 capitalize">@ViewBag.UserRole</span></div>
                    <div><span class="font-medium text-gray-700">🆔 ID:</span> <span class="text-gray-600">@ViewBag.UserId</span></div>
                    <div><span class="font-medium text-gray-700">📚 Área:</span> <span class="text-gray-600">Administración</span></div>
                </div>
            </section>

            <!-- Alerta -->
            <section class="bg-red-50 border border-red-200 rounded-lg p-4 mb-8">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-triangle text-red-600 mr-3"></i>
                    <span class="text-red-800 font-semibold">Iniciaste sesión como ADMINISTRADOR</span>
                </div>
                <p class="text-red-700 text-sm mt-2">Tienes acceso completo al sistema y sus funcionalidades.</p>
            </section>

            <!-- Botones de acción -->
            <section>
                <h3 class="text-xl font-semibold text-gray-800 mb-6 text-center">
                    <i class="fas fa-cogs mr-2 text-pink-600"></i>Panel de Control
                </h3>

                <div class="grid grid-cols-1 gap-4">
                    <a href="#" class="bg-gradient-to-r from-pink-500 to-pink-600 text-white py-4 px-6 rounded-lg font-semibold text-lg hover:from-pink-600 hover:to-pink-700 focus:ring-4 focus:ring-pink-300 transition duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
                        <i class="fas fa-users mr-3 text-xl"></i>
                        <span>Gestionar Usuarios</span>
                        <i class="fas fa-arrow-right ml-3"></i>
                    </a>

                    <a href="@Url.Action("Registrar", "Libros")" class="bg-gradient-to-r from-pink-500 to-pink-600 text-white py-4 px-6 rounded-lg font-semibold text-lg hover:from-pink-600 hover:to-pink-700 focus:ring-4 focus:ring-pink-300 transition duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
                        <i class="fas fa-book mr-3 text-xl"></i>
                        <span>Gestionar Libros</span>
                        <i class="fas fa-arrow-right ml-3"></i>
                    </a>

                    <a href="#" class="bg-gradient-to-r from-pink-500 to-pink-600 text-white py-4 px-6 rounded-lg font-semibold text-lg hover:from-pink-600 hover:to-pink-700 focus:ring-4 focus:ring-pink-300 transition duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
                        <i class="fas fa-chart-bar mr-3 text-xl"></i>
                        <span>Reportes</span>
                        <i class="fas fa-arrow-right ml-3"></i>
                    </a>
                </div>
            </section>

            <!-- Estadísticas -->
            <section class="mt-10 pt-8 border-t border-gray-200">
                <h4 class="text-lg font-semibold text-gray-800 mb-4 text-center">
                    <i class="fas fa-tachometer-alt mr-2 text-pink-600"></i>Estadísticas Rápidas
                </h4>

                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">

                    <!-- Usuarios -->
                    <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-lg">
                        <i class="fas fa-users text-2xl text-blue-600 mb-2"></i>
                        <div class="text-2xl font-bold text-blue-800">@Convert.ToInt32(ViewBag.TotalUsuarios)</div>
                        <div class="text-sm text-blue-600">Usuarios</div>
                    </div>

                    <!-- Libros -->
                    <div class="bg-gradient-to-br from-green-50 to-green-100 p-4 rounded-lg">
                        <i class="fas fa-book text-2xl text-green-600 mb-2"></i>
                        <div class="text-2xl font-bold text-green-800">@Convert.ToInt32(ViewBag.TotalLibros)</div>
                        <div class="text-sm text-green-600">Libros</div>
                    </div>

                    <!-- Préstamos -->
                    <div class="bg-gradient-to-br from-orange-50 to-orange-100 p-4 rounded-lg">
                        <i class="fas fa-handshake text-2xl text-orange-600 mb-2"></i>
                        <div class="text-2xl font-bold text-orange-800">@Convert.ToInt32(ViewBag.TotalPrestamos)</div>
                        <div class="text-sm text-orange-600">Préstamos Activos</div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.text-2xl.font-bold').forEach(el => {
                const finalValue = parseInt(el.textContent) || 0; // <--- asegúrate de tener un número
                let current = 0;
                const increment = Math.max(1, Math.ceil(finalValue / 40));

                const updateCounter = () => {
                    current += increment;
                    if (current < finalValue) {
                        el.textContent = current;
                        requestAnimationFrame(updateCounter);
                    } else {
                        el.textContent = finalValue;
                    }
                };
                updateCounter();
            });
        });
    </script>

</body>
</html>
