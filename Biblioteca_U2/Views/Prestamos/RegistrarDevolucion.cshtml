                                Condici√≥n al prestar: @Model.tblibro.condicion
                            </span>
                        </div>
                    </div>

                    <!-- Prestatario -->
                    <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4">
                        <h4 class="font-semibold text-gray-700 mb-3 flex items-center">
                            <i class="fas fa-user text-blue-600 mr-2"></i>Prestatario
                        </h4>
                        <p class="text-lg font-bold text-gray-900">@Model.tbusuario2.nombre @Model.tbusuario2.apellido</p>
                        <p class="text-sm text-gray-600">@Model.tbusuario2.email</p>
                        <p class="text-xs text-gray-500 mt-1">C√≥digo: @Model.tbusuario2.codigo_identificacion</p>
                    </div>

                    <!-- Fechas -->
                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4">
                        <h4 class="font-semibold text-gray-700 mb-3 flex items-center">
                            <i class="fas fa-calendar text-green-600 mr-2"></i>Fechas
                        </h4>
                        <p class="text-sm text-gray-700">
                            <strong>Entrega:</strong> @Model.fecha_entrega?.ToString("dd/MM/yyyy")
                        </p>
                        <p class="text-sm text-gray-700">
                            <strong>Devoluci√≥n prevista:</strong> @Model.fecha_prevista_devolucion.ToString("dd/MM/yyyy")
                        </p>
                        <p class="text-sm text-gray-700">
                            <strong>D√≠as transcurridos:</strong> @diasPrestamo d√≠as
                        </p>
                        @if (Model.numero_renovaciones > 0)
                        {
                            <p class="text-xs text-blue-600 mt-2">
                                <i class="fas fa-redo mr-1"></i>Renovado @Model.numero_renovaciones veces
                            </p>
                        }
                    </div>

                    <!-- Estado -->
                    <div class="bg-gradient-to-br from-@(esRetrasado ? "red" : "yellow")-50 to-@(esRetrasado ? "red" : "yellow")-100 rounded-lg p-4">
                        <h4 class="font-semibold text-gray-700 mb-3 flex items-center">
                            <i class="fas fa-info-circle text-@(esRetrasado ? "red" : "yellow")-600 mr-2"></i>Estado
                        </h4>
                        @if (esRetrasado)
                        {
                            var diasRetraso = (DateTime.Now - Model.fecha_prevista_devolucion).Days;
                            <p class="text-lg font-bold text-red-700">
                                <i class="fas fa-exclamation-triangle mr-2"></i>RETRASADO
                            </p>
                            <p class="text-sm text-red-600">@diasRetraso d√≠as de retraso</p>
                        }
                        else
                        {
                            <p class="text-lg font-bold text-green-700">
                                <i class="fas fa-check-circle mr-2"></i>A TIEMPO
                            </p>
                        }
                    </div>
                </div>
            </div>

            <!-- Formulario de Devoluci√≥n -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-clipboard-check text-green-600 mr-2"></i>Evaluaci√≥n de Devoluci√≥n
                </h3>

                @using (Html.BeginForm("ProcesarDevolucion", "Prestamos", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="idPrestamo" value="@Model.id_prestamo" />

                    <div class="mb-6">
                        <label class="block text-gray-700 font-semibold mb-2">
                            <i class="fas fa-star text-yellow-500 mr-2"></i>Condici√≥n del libro devuelto *
                        </label>
                        <select name="condicionDevolucion" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                            <option value="">-- Seleccione una condici√≥n --</option>
                            <option value="Excelente">‚≠ê Excelente - Sin desgaste visible</option>
                            <option value="Muy bueno">üëç Muy bueno - M√≠nimo desgaste</option>
                            <option value="Bueno">‚úîÔ∏è Bueno - Desgaste normal</option>
                            <option value="Regular">‚ö†Ô∏è Regular - Desgaste notable</option>
                            <option value="Da√±ado">‚ùå Da√±ado - Deterioro significativo</option>
                        </select>
                    </div>

                    <div class="mb-6">
                        <label class="block text-gray-700 font-semibold mb-2">
                            <i class="fas fa-comment-dots text-blue-500 mr-2"></i>Descripci√≥n de da√±os (si aplica)
                        </label>
                        <textarea name="descripcionDanio" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Describa cualquier da√±o, manchas, p√°ginas dobladas, etc. Dejar en blanco si el libro est√° en perfectas condiciones."></textarea>
                        <p class="text-xs text-gray-500 mt-1">
                            <i class="fas fa-info-circle mr-1"></i>
                            Este campo es importante para llevar un registro del estado de los libros
                        </p>
                    </div>

                    <!-- Advertencia si est√° retrasado -->
                    @if (esRetrasado)
                    {
                        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-exclamation-triangle text-yellow-500 text-xl"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-yellow-700">
                                        <strong>Nota:</strong> Este pr√©stamo est√° retrasado. Considere aplicar las pol√≠ticas correspondientes seg√∫n el reglamento de la biblioteca.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="flex space-x-4">
                        <a href="@Url.Action("PrestamosActivos")" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-3 rounded-lg font-semibold text-center transition">
                            <i class="fas fa-times mr-2"></i>Cancelar
                        </a>
                        <button type="submit" class="flex-1 bg-gradient-to-r from-green-600 to-green-700 text-white px-6 py-3 rounded-lg font-semibold hover:from-green-700 hover:to-green-800 transition"
                                onclick="return confirm('¬øConfirmar la devoluci√≥n de este libro?')">
                            <i class="fas fa-check mr-2"></i>Registrar Devoluci√≥n
                        </button>
                    </div>
                }
            </div>
        }

    </main>

</body>
</html>
