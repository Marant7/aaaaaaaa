@model Biblioteca_U2.Models.tblibro
@{
    ViewBag.Title = "Registrar Donación de Libro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Tailwind + FontAwesome -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { 'sans': ['Poppins', 'Segoe UI', 'sans-serif'] },
                    colors: {
                        'pink-gradient-start': '#f093fb',
                        'pink-gradient-end': '#f5576c'
                    }
                }
            }
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="font-sans min-h-screen bg-gradient-to-br from-pink-gradient-start to-pink-gradient-end">
    <!-- Header -->
    <header class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
            <div class="flex items-center">
                <i class="fas fa-book text-2xl text-pink-600 mr-3"></i>
                <h1 class="text-lg font-bold text-gray-800">Panel de Administración - Biblioteca UPT</h1>
            </div>
            <a href="@Url.Action("Logout","Account")"
               class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-medium transition duration-200 flex items-center">
                <i class="fas fa-sign-out-alt mr-2"></i>Cerrar Sesión
            </a>
        </div>
    </header>

    <!-- Main -->
    <main class="py-10 px-4">
        <div class="max-w-4xl mx-auto">
            <!-- Breadcrumb -->
            <nav class="mb-6 text-white flex items-center space-x-2">
                <a href="@Url.Action("Dashboard","Admin")" class="hover:text-pink-200 flex items-center">
                    <i class="fas fa-home mr-1"></i> Dashboard
                </a>
                <i class="fas fa-chevron-right text-pink-200"></i>
                <span class="text-pink-200">Registrar Donación</span>
            </nav>

            <!-- Card -->
            <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
                <div class="bg-gradient-to-r from-pink-500 to-pink-600 p-8 text-white flex items-center">
                    <div class="bg-white bg-opacity-20 p-4 rounded-full mr-6">
                        <i class="fas fa-gift text-3xl"></i>
                    </div>
                    <div>
                        <h2 class="text-3xl font-bold mb-2">Registrar Donación de Libro</h2>
                        <p class="text-pink-100">Complete la información del libro donado para agregarlo al catálogo</p>
                    </div>
                </div>

                <div class="p-8">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="bg-green-100 text-green-800 border-l-4 border-green-500 p-4 mb-5 rounded-md flex items-center">
                            <i class="fas fa-check-circle mr-2"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    @using (Html.BeginForm("Registrar", "Libros", FormMethod.Post, new { @class = "space-y-6" }))
                    {
                        @Html.AntiForgeryToken()

                        <!-- Fila 1 -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-book mr-2 text-pink-600"></i>Nombre del Libro *
                                </label>
                                @Html.TextBoxFor(m => m.titulo, new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", placeholder = "Ingrese el título completo del libro" })
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-user-pen mr-2 text-pink-600"></i>Autor *
                                </label>
                                @Html.TextBoxFor(m => m.autor, new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", placeholder = "Nombre del autor o autores" })
                            </div>
                        </div>

                        <!-- Fila 2 -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-tags mr-2 text-pink-600"></i>Género *
                                </label>
                                @Html.DropDownListFor(m => m.id_genero, (SelectList)ViewBag.Generos, "Seleccione un género",
                                    new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500" })
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-graduation-cap mr-2 text-pink-600"></i>Carrera Relacionada
                                </label>
                                @Html.DropDownListFor(m => m.id_carrera, (SelectList)ViewBag.Carreras, "Seleccione una carrera (opcional)",
                                    new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500" })
                            </div>
                        </div>

                        <!-- Fila 3 -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-calendar mr-2 text-pink-600"></i>Año de Publicación
                                </label>
                                @Html.TextBoxFor(m => m.ano_publicacion, new { @type = "number", @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", placeholder = "Ejemplo: 2024" })
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="fas fa-star mr-2 text-pink-600"></i>Estado Inicial *
                                </label>
                                @Html.DropDownListFor(m => m.condicion,
                                    new SelectList(new[] { "Regular", "Bueno", "Muy bueno", "Excelente" }),
                                    "Seleccione el estado",
                                    new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500" })
                            </div>
                        </div>

                        <!-- Descripción -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-align-left mr-2 text-pink-600"></i>Descripción
                            </label>
                            @Html.TextAreaFor(m => m.sinopsis, new { @rows = "3", @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500", placeholder = "Breve descripción del contenido del libro..." })
                        </div>

                        <!-- Donador -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-heart mr-2 text-pink-600"></i>Donador *
                            </label>
                            @Html.DropDownListFor(m => m.id_usuario_donador, (SelectList)ViewBag.Usuarios, "Seleccione un donador",
                                new { @class = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500" })
                        </div>

                        <!-- Botones -->
                        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                            <a href="@Url.Action("Dashboard", "Admin")"
                               class="flex-1 bg-gray-500 hover:bg-gray-600 text-white py-3 px-6 rounded-lg font-semibold text-lg flex items-center justify-center transition duration-300">
                                <i class="fas fa-times mr-2"></i>Cancelar
                            </a>
                            <button type="submit"
                                    class="flex-1 bg-gradient-to-r from-pink-500 to-pink-600 text-white py-3 px-6 rounded-lg font-semibold text-lg hover:from-pink-600 hover:to-pink-700 focus:ring-4 focus:ring-pink-300 transition duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
                                <i class="fas fa-plus-circle mr-2"></i>Registrar Libro
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</body>
</html>
